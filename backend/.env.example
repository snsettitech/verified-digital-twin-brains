# Verified Digital Twin Brain - Backend Environment Variables
# Copy this file to .env and fill in your actual values

# ============================================================================
# REQUIRED: Core Service API Keys
# ============================================================================

# OpenAI API Key (required for embeddings and chat)
OPENAI_API_KEY=your_openai_api_key_here

# Pinecone Configuration
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_INDEX_NAME=your_pinecone_index_name

# Supabase Configuration (PostgreSQL & Auth)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your_supabase_anon_key_here
# Optional: Use service role key for admin operations
SUPABASE_SERVICE_KEY=your_supabase_service_role_key_here

# ============================================================================
# REQUIRED: Authentication
# ============================================================================

# JWT Secret for token signing (use a strong random string in production)
JWT_SECRET=your_jwt_secret_key_here_change_in_production

# ============================================================================
# OPTIONAL: Server Configuration
# ============================================================================

# Server port (default: 8000)
PORT=8000

# Server host (default: 0.0.0.0)
HOST=0.0.0.0

# CORS allowed origins (comma-separated, default: *)
ALLOWED_ORIGINS=*

# ============================================================================
# OPTIONAL: Development Mode
# ============================================================================

# Enable development mode (default: true)
# Set to false in production
DEV_MODE=true

# ============================================================================
# OPTIONAL: Specialization
# ============================================================================

# Specialization variant: "vanilla" or "vc" (default: vanilla)
SPECIALIZATION=vanilla

# ============================================================================
# OPTIONAL: External Services
# ============================================================================

# Cohere API Key (optional, for additional embedding models)
COHERE_API_KEY=

# Composio API Key (optional, for cloud tools integration)
COMPOSIO_API_KEY=

# Enable web search tool (optional, default: false)
ENABLE_WEB_SEARCH=false

# ============================================================================
# OPTIONAL: Frontend URL (for email invitations, share links, etc.)
# ============================================================================

FRONTEND_URL=http://localhost:3000

# ============================================================================
# OPTIONAL: Worker & Queue Configuration
# ============================================================================

# Enable background worker (default: true)
WORKER_ENABLED=true

# Worker poll interval in seconds (default: 5)
WORKER_POLL_INTERVAL=5

# Redis URL for job queue (optional, falls back to in-memory queue)
# Format: redis://localhost:6379 or redis://:password@host:port
REDIS_URL=redis://localhost:6379
